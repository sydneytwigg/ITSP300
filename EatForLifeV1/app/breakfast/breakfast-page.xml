<Page loaded="pageLoaded" class="page" xmlns="http://www.nativescript.org/tns.xsd">

  <ActionBar title="Change breakfast" class="action-bar">
    <ActionItem
    ios.systemIcon="3" ios.position="left"
    android.systemIcon="ic_menu_save" android.position="actionBar" tap="saveChanges"></ActionItem>
  </ActionBar>
  <ScrollView>
    <StackLayout class="home-panel">
      <Label text="Four items can be selected for breakfast" class="l" />
      <Label text="Select first item:" class="l" />
      <ListPicker items="{{ listPicker1 }}" selectedIndex="{{ selectedListPickerIndex }}" />
      <Label text="Select first item:" class="l" />
      <ListPicker items="{{ listPicker2 }}" selectedIndex="{{ selectedListPickerIndex2 }}" />
      <Label text="Select third item:" class="l" />
      <ListPicker items="{{ listPicker3 }}" selectedIndex="{{ selectedListPickerIndex3 }}" />
      <Label text="Select fourth item:" class="l" />
      <ListPicker items="{{ listPicker4 }}" selectedIndex="{{ selectedListPickerIndex4 }}" />
  
    </StackLayout>

  </ScrollView>
</Page>