<Page loaded="pageLoaded" class="page" xmlns="http://www.nativescript.org/tns.xsd">

  <ActionBar class="action-bar">
    <ActionItem ios.systemIcon="3" ios.position="left"
    android.systemIcon="ic_menu_save" android.position="actionBar" tap="saveChanges"></ActionItem>
    <Label class="action-bar-title h3" text="Change Lunch"></Label>
  </ActionBar>
  <ScrollView class="contents">
    <StackLayout class="body">
      <Label text=" "/>
      <Label text="Three items can be selected for the" class="text-muted" />
      <Label text="lunch" class="text-muted" />
      <Label text=" "/>
      <Label text="Select first item:" class="segmented-bar h3" />
      <ListPicker items="{{ listPicker1 }}" selectedIndex="{{ selectedListPickerIndex }}" />
      <Label text="Select second item:" class="segmented-bar h3" />
      <ListPicker items="{{ listPicker2 }}" selectedIndex="{{ selectedListPickerIndex2 }}" />
      <Label text="Select third item:" class="segmented-bar h3" />
      <ListPicker items="{{ listPicker3 }}" selectedIndex="{{ selectedListPickerIndex3 }}" />
      <Label text="Select fourth item:" class="segmented-bar h3" />
      <ListPicker items="{{ listPicker4 }}" selectedIndex="{{ selectedListPickerIndex4 }}" />
    </StackLayout>
  </ScrollView>
</Page>
