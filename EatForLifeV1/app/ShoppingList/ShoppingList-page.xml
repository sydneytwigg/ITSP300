<Page loaded="pageLoaded" class="page" xmlns="http://www.nativescript.org/tns.xsd"  xmlns:CheckBox="nativescript-checkbox">

    <ActionBar class="action-bar">
      <Label class="action-bar-title h3" text="Shopping List"></Label>
      <ActionItem tap="onEdit" ios.systemIcon="1" android.systemIcon="ic_menu_share"
        ios.position="right" visibility="{{ isEditing ? 'collapse' : 'visible' }}" />
    </ActionBar>

    <ScrollView class="contents">
      <StackLayout class="body">
        <Label text=" "/>
        <GridLayout columns="0,150,150,10" rows="30, 30,30" width="2000" class="h3">
          <Label text="Items" row="0" col="1" />
          <Label text="Measurement" row="0" col="2" />
        </GridLayout>

        <ListView class="list-group" items="{{ countries }}" itemTap="{{ onItemTap }}" style="height: 1800px">
          <ListView.itemTemplate>
              <FlexboxLayout flexDirection="row" class="list-group-item">
                  <GridLayout columns="5,200,110,50" rows="40, 40,40" width="2000" height="60" class="MyMealLabel1">
                      <Label text="{{ name }}" class="list-group-item-heading" verticalAlignment="center" style="width: 60%" row="0" col="1" />
                      <Label text="{{  measurment }}" class="list-group-item-heading" verticalAlignment="center" style="width: 60%" row="0" col="2" />
                    <CheckBox:CheckBox text="" checked="false"  row="0" col="3" />
                  </GridLayout>
              </FlexboxLayout>
          </ListView.itemTemplate>
        </ListView>
      </StackLayout>
    </ScrollView>
</Page>
