<!--
The TabView component provides a simple way to navigate between different views by
tapping on some of the tabs or by swiping between the views.
Learn more about the TabView component in this documentation article:
http://docs.nativescript.org/cookbook/ui/tab-view
-->
<TabView androidTabsPosition="bottom" androidOffscreenTabLimit="0" >
    <Frame defaultPage="login/login-page"></Frame>

    <TabViewItem title="Home" ios:iconSource="res://tabIcons/home0" android:iconSource="res://home_s" width="50" height="50">
        <Frame defaultPage="home/home-items-page"></Frame>
    </TabViewItem>

    <TabViewItem title="Meal Plan" ios:iconSource="res://tabIcons/food_s" android:iconSource="res://food_s">
      <Frame defaultPage="mealplan-overview/mealplan-overview-page"></Frame>
    </TabViewItem>

    <TabViewItem title="Profile" ios:iconSource="res://tabIcons/profile_s" android:iconSource="res://profile_s">
      <Frame defaultPage="Profile/Profile-page"></Frame>
    </TabViewItem>

    <TabViewItem title="Shopping" ios:iconSource="res://tabIcons/shopping_s" android:iconSource="res://shopping_s">
      <Frame defaultPage="ShoppingList/ShoppingList-page"></Frame>
    </TabViewItem>

    <TabViewItem title="Contact" ios:iconSource="res://tabIcons/chat_s" android:iconSource="res://chat_s">
        <Frame defaultPage="contact/contact-page"></Frame>
    </TabViewItem>
  <TabViewItem title="Logout" ios:iconSource="res://tabIcons/chat_s" android:iconSource="~/images/logout.png" tap="logoutBtn">
    <Frame defaultPage="login/login-page"></Frame>
  </TabViewItem>

</TabView>
