<Page loaded="pageLoaded" xmlns="http://www.nativescript.org/tns.xsd">

	<ActionBar title="My Meal Plan" class="action-bar">
	</ActionBar>
	<ScrollView>
		<StackLayout class="MyStackLayout">
			<Label text="Click the button to view meal for the day" class="MyLabel" />

			<button class="MyMealButton" tap="btnViewMealD1" text="Day 1">Day 1</button>
			<button class="MyMealButton" tap="btnViewMealD2" text="Day 2">Day 2</button>
			<button class="MyMealButton" tap="btnViewMealD3" text="Day 3">Day 3</button>
			<button class="MyMealButton" tap="btnViewMealD4" text="Day 4">Day 4</button>
			<button class="MyMealButton" tap="btnViewMealD5" text="Day 5">Day 5</button>
			<button class="MyMealButton" tap="btnViewMealD6" text="Day 6">Day 6</button>
			<button class="MyMealButton" tap="btnViewMealD7" text="Day 7">Day 7</button>
			
      <button class="MyMealActionButton" tap="btnPrint" text="Save diet">Mail me</button>
      <button class="MyMealActionButton" tap="send" text="Mail diet"></button>

      <button class="MyMealActionButton" tap="btnLogin" text="Login"></button>
         

		</StackLayout>
	</ScrollView>
</Page>
