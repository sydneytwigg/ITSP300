<Page loaded="pageLoaded" class="page" xmlns="http://www.nativescript.org/tns.xsd">

	<ActionBar class="action-bar">
		<Label class="action-bar-title h3" text="Meal Plan"></Label>
    <ActionItem  tap="send" ios.systemIcon="1" android.systemIcon="ic_menu_share"
            ios.position="right" visibility="{{ isEditing ? 'collapse' : 'visible' }}" />
    <ActionItem ios.systemIcon="3" android.systemIcon="ic_menu_save"  tap="btnPrint"></ActionItem>

  </ActionBar>
	<ScrollView class="contents">
		<StackLayout class="body">
			<Label text=" "/>
			<Label text="Select a day to view" class="segmented-bar h3" />
			<Label text=" "/>

			<button class="btn btn-primary btn-rounded-lg btn-layout-mp" tap="btnViewMeal" text="Day 1">Day 1</button>
			<button class="btn btn-primary btn-rounded-lg btn-layout-mp" tap="btnViewMeal" text="Day 2">Day 2</button>
			<button class="btn btn-primary btn-rounded-lg btn-layout-mp" tap="btnViewMeal" text="Day 3">Day 3</button>
			<button class="btn btn-primary btn-rounded-lg btn-layout-mp" tap="btnViewMeal" text="Day 4">Day 4</button>
			<button class="btn btn-primary btn-rounded-lg btn-layout-mp" tap="btnViewMeal" text="Day 5">Day 5</button>
			<button class="btn btn-primary btn-rounded-lg btn-layout-mp" tap="btnViewMeal" text="Day 6">Day 6</button>
			<button class="btn btn-primary btn-rounded-lg btn-layout-mp" tap="btnViewMeal" text="Day 7">Day 7</button>

      <button class="btn btn-primary btn-rounded-lg btn-layout-mp" tap="btnPrint" text="Save diet">Mail me</button>
      <button class="btn btn-primary btn-rounded-lg btn-layout-mp" tap="send" text="Mail diet"></button>
    <button class="btn btn-primary btn-rounded-lg btn-layout-mp" tap="btnLogin" text="Login"></button>


		</StackLayout>
	</ScrollView>
</Page>
