<Page loaded="pageLoaded" class="page" xmlns="http://www.nativescript.org/tns.xsd" backgroundColor="white" pageLoaded="pageLoaded">

	<ActionBar title="View Profile" class="action-bar">
    <ActionItem tap="onEdit" ios.systemIcon="2" android.systemIcon="ic_menu_edit" ios.position="right"
    visibility="{{ isEditing ? 'collapse' : 'visible' }}"/>
	</ActionBar>
	<ScrollView>
		<StackLayout class="home-panel2">

      <Label text="This is your personal information" class="l" />
            <StackLayout margin-top="20">
		
		<Label text="Name" class="profile-heading" />
              	<Label text="{{ name }}" class="input" hint="Name"/>
              
			<Label text="Surname" class="profile-heading" />
		<Label text="{{ surname }}" class="input" hint="Surname" />
              
			<Label text="Email" class="profile-heading" />
		<Label text="{{ email }}" class="input" hint="Email address"/>
              
			<Label text="Phone Number" class="profile-heading" keyboardType="number" />
		<Label text="{{ phoneNum }}" class="input" hint="Phone number"/>
                  
      <Label text="Height (cm)" class="profile-heading" />
  <Label text="{{ height }}" secure="false" class="input" hint="Height"/>
             
  <Label text="Weight (kg)" class="profile-heading" />
      <Label text="{{ weight }}" secure="false" class="input" hint="Weight" />
          
      <Label text="Goal weight (kg)" class="profile-heading" />
     <Label text="{{ goal }}" secure="false" class="input" hint="Goal Weight" />
                        
          
		</StackLayout>
			<StackLayout orientation="vertical" width="210" height="210">
        <Button text="View BMI" tap="bmiButton" class="button" />
    			</StackLayout>
		</StackLayout>
	</ScrollView>
</Page>
