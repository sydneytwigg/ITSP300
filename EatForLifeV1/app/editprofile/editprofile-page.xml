<Page loaded="pageLoaded" class="page" xmlns="http://www.nativescript.org/tns.xsd" backgroundColor="white" pageLoaded="pageLoaded">

	<ActionBar title="View Profile" class="action-bar">
		<Label class="action-bar-title h3" text="Edit Profile"></Label>
    <ActionItem ios.systemIcon="3" android.systemIcon="ic_menu_save"  tap="{{ onSave }}"></ActionItem>
	</ActionBar>
	<ScrollView class="contents">
    <StackLayout class="body">
			<StackLayout margin-top="20">
					<Label text=" "/>
					<Label text="Update your personal information." class="text-muted" />
					<Label text=" "/>

					<Label text="Name" class="segmented-bar h3" />
         	<TextField text="{{ name }}" class="input" hint="Name"/>
					<Label text=" "/>

					<Label text="Surname" class="segmented-bar h3" />
					<TextField text="{{ surname }}" class="input" hint="Surname" />
					<Label text=" "/>

					<Label text="Email" class="segmented-bar h3" />
					<TextField text="{{ email }}" class="input" hint="Email address"/>
					<Label text=" "/>

					<Label text="Phone Number" class="segmented-bar h3" keyboardType="number" />
					<TextField text="{{ phoneNum }}" class="input" hint="Phone number"/>
					<Label text=" "/>

					<Label text="Password" class="segmented-bar h3" />
					<TextField text="{{ pwd }}" secure="true" class="input" hint="Password"/>
					<Label text=" "/>

      		<Label text="Height (m)" class="segmented-bar h3" />
      		<TextField text="{{ height }}" secure="false" class="input" hint="Height"/>
					<Label text=" "/>

		  		<Label text="Weight (kg)" class="segmented-bar h3" />
     			<TextField text="{{ weight }}" secure="false" class="input" hint="Weight" />
					<Label text=" "/>

      		<Label text="Goal weight (kg)" class="segmented-bar h3" />
     			<TextField text="{{ goal }}" secure="false" class="input" hint="Goal Weight" />
					<Label text=" "/>

				</StackLayout>
		</StackLayout>
	</ScrollView>
</Page>
