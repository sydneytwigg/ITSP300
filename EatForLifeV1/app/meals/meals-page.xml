<Page loaded="pageLoaded" class="page" xmlns="http://www.nativescript.org/tns.xsd">

  <ActionBar class="action-bar">
    <Label class="action-bar-title h3" text="Edit Meal Plan"></Label>

  </ActionBar>
  <ScrollView class="contents">
    <StackLayout class="body">
      <Label text=" "/>
      <Label text="Select the meal you want to change." class="text-muted" />
      <Label text=" "/>
      <button class="btn btn-primary btn-rounded-lg btn-layout-mp" tap="breakfast" text="Breakfast"></button>
      <button class="btn btn-primary btn-rounded-lg btn-layout-mp" tap="amsnack" text="Morning snack"></button>
      <button class="btn btn-primary btn-rounded-lg btn-layout-mp" tap="lunch" text="Lunch"></button>
      <button class="btn btn-primary btn-rounded-lg btn-layout-mp" tap="pmsnack" text="Afternoon  snack"></button>
      <button class="btn btn-primary btn-rounded-lg btn-layout-mp" tap="dinner" text="Dinner"></button>

    </StackLayout>
  </ScrollView>
</Page>
