<Page loaded="pageLoaded" class="page" xmlns="http://www.nativescript.org/tns.xsd">

  <ActionBar title="Meals" class="action-bar">
  </ActionBar>
  <ScrollView>
    <StackLayout class="home-panel">
      <Label text="Select the meal you want to change" class="l" />
      <button class="MyMealActionButton" tap="breakfast" text="Breakfast"></button>
      <button class="MyMealActionButton" tap="amsnack" text="Morning snack"></button>
      <button class="MyMealActionButton" tap="lunch" text="Lunch"></button>
      <button class="MyMealActionButton" tap="pmsnack" text="Afternoon  snack"></button>
      <button class="MyMealActionButton" tap="dinner" text="Dinner"></button>
    
    </StackLayout>
  </ScrollView>
</Page>