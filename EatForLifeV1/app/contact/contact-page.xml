<Page navigatingTo="onNavigatingTo" class="page" xmlns="http://schemas.nativescript.org/tns.xsd" >
    <Page.actionBar>
      <ActionBar class="action-bar">
        <Label class="action-bar-title h3" text="Contact Us"></Label>
      </ActionBar>
    </Page.actionBar>
    <ScrollView class="contents">
    <StackLayout class="body">
      <Label text=" "/>
      <Label text="Contact your dietician directly." class="text-muted" />
      <Label text=" "/>
      <StackLayout class="input-field">
            <Label text="Name" class="segmented-bar h3" textWrap="true"></Label>
            <TextField id="contactName" hint="Name" text="{{ contactName }}" class="input input-border" autocorrect="false"></TextField>
        </StackLayout>
      <StackLayout class="input-field">
        <Label text="Surname" class="segmented-bar h3" textWrap="true"></Label>
        <TextField id="contactSurname" hint="Surname" text="{{ contactSurname }}" class="input input-border" autocorrect="false"></TextField>
      </StackLayout>

        <StackLayout class="input-field">
            <Label text="Email" class="segmented-bar h3" textWrap="true"></Label>
            <TextField id="contactEmail" hint="Email" text="{{ contactEmail }}" class="input input-border" autocorrect="false"></TextField>
        </StackLayout>
        <StackLayout class="input-field">
            <Label text="Message" class="segmented-bar h3" textWrap="true"></Label>
            <TextField id="contactMessage" hint="Message" text="{{ contactMessage }}" class="input input-border" autocorrect="false"></TextField>
        </StackLayout>
        <Button id="sendEmail" text="Send" tap="{{ sendEmail }}" class="btn btn-primary btn-rounded-lg btn-layout-mp"></Button>
    </StackLayout>
  </ScrollView>
</Page>
