<Page loaded="pageLoaded" class="page" xmlns="http://www.nativescript.org/tns.xsd">

	<ActionBar title="View Profile" class="action-bar">
	</ActionBar>
	<ScrollView>
		<StackLayout class="home-panel">

			<StackLayout orientation="vertical" width="210" height="210" backgroundColor="lightgray">
				<Image src="https://play.nativescript.org/dist/assets/img/NativeScript_logo.png" />
				<Button text="Upload Profile Image" tap="{{ upLoadButton }}" class="button" />
			</StackLayout>

			<Label text="Name" class="heading" />
			<TextField text="{{ textName }}" class="input" />
			<Label text="Surname" class="heading" />
			<TextField text="{{ textSurName }}" class="input" />
			<Label text="Email" class="heading" />
			<TextField text="{{ textEmail }}" class="input" />
			<Label text="Phone Number" class="heading" keyboardType="number" />
			<TextField text="{{ numPhone }}" class="input" />
			<Label text="Name" class="heading" />
			<TextField text="{{ textName }}" class="input" />
			<StackLayout orientation="vertical" width="210" height="210" backgroundColor="lightgray">
        <Button text="View BMI" tap="bmiButton" class="button" />
      	<Button text="Save" tap="{{ saveButton }}" class="button" />
			</StackLayout>

		</StackLayout>
	</ScrollView>
</Page>
