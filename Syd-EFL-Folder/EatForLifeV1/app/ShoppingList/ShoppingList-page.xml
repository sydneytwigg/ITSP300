<Page loaded="pageLoaded" class="page" xmlns="http://www.nativescript.org/tns.xsd">

	<ActionBar title="Shoping list" class="action-bar">
	</ActionBar>
	<TabView id="tabViewContainer">
		<TabViewItem title="All items">

			<ScrollView class="page">
				<ListView class="list-group" itemTap="onItemTap" items="{{ data }}">
					<ListView.itemTemplate>
						<GridLayout class="list-group-item" rows="*" columns="*">
							<Label row="0" col="0" text="{{ text }}"></Label>
									<Switch class="m-15 firstSwitchStyle" row="0" col="1" checked="true" (checkedChange)="switch1.checked"/>

								</GridLayout>
							</ListView.itemTemplate>
						</ListView>
					</ScrollView>

	    </TabViewItem>
	    <TabViewItem title="Bought items" >

				<ScrollView class="page">
					<ListView class="list-group" itemTap="onItemTap" items="{{ data }}">
						<ListView.itemTemplate>
							<GridLayout class="list-group-item" rows="*" columns="*">
								<Label row="0" col="0" text="{{ text }}"></Label>
									<Switch class="m-15 firstSwitchStyle" row="0" col="1" checked="true" (checkedChange)="switch1.checked"/>

								</GridLayout>
							</ListView.itemTemplate>
						</ListView>
					</ScrollView>

	    </TabViewItem>
		<TabViewItem title="Not bought items" >

				<ScrollView class="page">
					<ListView class="list-group" itemTap="onItemTap" items="{{ data }}">
						<ListView.itemTemplate>
							<GridLayout class="list-group-item" rows="*" columns="*">
								<Label row="0" col="0" text="{{ text }}"></Label>
									<Switch class="m-15 firstSwitchStyle" row="0" col="1" checked="true" (checkedChange)="switch1.checked"/>

								</GridLayout>
							</ListView.itemTemplate>
						</ListView>
					</ScrollView>

			    </TabViewItem>
	</TabView>
</Page>
